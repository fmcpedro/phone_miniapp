{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operators list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operator in operators %}
            <tr>
                <td><a href="{{ path('operator_show', { 'id': operator.id }) }}">{{ operator.name }}</a></td>
                <td>{{ operator.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('operator_show', { 'id': operator.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('operator_edit', { 'id': operator.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('operator_new') }}">Create a new operator</a>
        </li>
    </ul>
{% endblock %}
