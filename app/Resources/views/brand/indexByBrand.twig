{#Lista telefones por brandId #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Phones List by Brand</h1>

    <table>
        <thead>
            <tr>
                <th>Model</th>
                <th>Height</th>
                <th>Issmart</th>
                <th>Obs</th>
                <th>Createdat</th>
                <th>Updatedat</th>
               {# <th>Id</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone in phones %}
            <tr>
                <td><a href="{{ path('phone_show', { 'id': phone.id }) }}">{{ phone.model }}</a></td>
                <td>{{ phone.height }}</td>
                <td>{% if phone.isSmart %}Yes{% else %}No{% endif %}</td>
                <td>{{ phone.obs }}</td>
                <td>{% if phone.createdAt %}{{ phone.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if phone.updatedAt %}{{ phone.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ phone.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('phone_show', { 'id': phone.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('phone_edit', { 'id': phone.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('phone_new') }}">Create a new phone</a>
        </li>
    </ul>
{% endblock %}
